
.footer {
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	        flex-direction: row;
	width: 100%;
	height: 80rpx;
	min-height: 80rpx;
	border-top: solid 1px #bbb;
	overflow: hidden;
	padding: 5rpx;
	background-color: #fafafa;
}
.footer-left {

	width: 80rpx;
	height: 80rpx;

	display: -webkit-box;

	display: flex;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	        align-items: center;
}
.footer-right {
	width: 120rpx;
	height: 80rpx;
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	        align-items: center;
	color: #1482D1;
}
.footer-center {
	-webkit-box-flex: 1;
	        flex: 1;
	height: 80rpx;
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	        align-items: center;
}
.footer-center .input-text {
	-webkit-box-flex: 1;
	        flex: 1;
	background: #fff;
	border: solid 1rpx #ddd;
	padding: 10rpx !important;
	font-family: verdana !important;
	overflow: hidden;
	border-radius: 15rpx;
}

