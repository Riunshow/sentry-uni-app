
.m-item {
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	        flex-direction: row;
	padding-top: 40rpx;
}
.m-left {
	display: -webkit-box;
	display: flex;
	width: 120rpx;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: start;
	        align-items: flex-start;
}
.m-content {
	display: -webkit-box;
	display: flex;
	-webkit-box-flex: 1;
	        flex: 1;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	        flex-direction: column;
	-webkit-box-pack: center;
	        justify-content: center;
	word-break: break-all;
}
.m-right {
	display: -webkit-box;
	display: flex;
	width: 120rpx;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: start;
	        align-items: flex-start;
}
.head_icon {
	width: 80rpx;
	height: 80rpx;
}
.m-content-head {
	position: relative;
}
.m-content-head-right {
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: end;
	        justify-content: flex-end;
}
.m-content-head-home {
	text-align: left;
	background: #1482d1;
	border: 1px #1482d1 solid;
	border-radius: 20rpx;
	padding: 20rpx;
	color: white;
}
.m-content-head-home:before {
	border: 15rpx solid transparent;
	border-right: 15rpx solid #1482d1;
	left: -26rpx;
	width: 0;
	height: 0;
	position: absolute;
	content: ' '
}
.m-content-head-customer {
	border: 1rpx white solid;
	background: white;
	border-radius: 20rpx;
	padding: 20rpx;
}
.m-content-head-customer:after {
	border: 15rpx solid transparent;
	border-left: 15rpx solid white;
	top: 20rpx;
	right: -26rpx;
	width: 0;
	height: 0;
	position: absolute;
	content: ' '
}

