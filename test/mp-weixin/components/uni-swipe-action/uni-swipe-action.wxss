
@charset "UTF-8";
.uni-swipe-action {
	width: 100%;
	overflow: hidden
}
.uni-swipe-action__container {
	position: relative;
	background-color: #fff;
	width: 200%;
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	        flex-direction: row;
	flex-wrap: wrap;
	-webkit-transition: -webkit-transform 350ms cubic-bezier(.165, .84, .44, 1);
	transition: -webkit-transform 350ms cubic-bezier(.165, .84, .44, 1);
	transition: transform 350ms cubic-bezier(.165, .84, .44, 1);
	transition: transform 350ms cubic-bezier(.165, .84, .44, 1), -webkit-transform 350ms cubic-bezier(.165, .84, .44, 1)
}
.uni-swipe-action__content {
	width: 50%
}
.uni-swipe-action__btn-group {
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	        flex-direction: row
}
.uni-swipe-action--show {
	position: relative;
	z-index: 1000
}
.uni-swipe-action--btn {
	padding: 0 32rpx;
	color: #fff;
	background-color: #c7c6cd;
	font-size: 28rpx;
	display: -webkit-inline-box;
	display: inline-flex;
	text-align: center;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	        flex-direction: row;
	-webkit-box-align: center;
	        align-items: center
}
.uni-swipe-action__mask {
	display: block;
	opacity: 0;
	position: fixed;
	z-index: 999;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%
}

