
.page-body {
	display: -webkit-box;
	display: flex;
}
.nav {
	display: -webkit-box;
	display: flex;
	width: 100%;
}
.nav-left {
	width: 30%;
}
.nav-left-item {
	height: 100rpx;
	border-right: solid 1px #E0E0E0;
	border-bottom: solid 1px #E0E0E0;
	font-size: 30rpx;
	display: -webkit-box;
	display: flex;
	-webkit-box-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	        justify-content: center;
}
.nav-right {
	width: 70%;
}
.nav-right-item {
	width: 28%;
	height: 220rpx;
	float: left;
	text-align: center;
	padding: 11rpx;
	font-size: 28rpx;
}
.nav-right-item image {
	width: 100rpx;
	height: 100rpx;
}
.active {
	color: #007AFF;
}

